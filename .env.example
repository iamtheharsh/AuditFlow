# Environment Variables Configuration
# ===================================
# Copy this file to .env and update with your actual values
# Never commit .env to version control

# OpenAI API Configuration (Optional - for LLM features)
# ------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Document Processing Configuration
# ---------------------------------
# Max file size for PDF processing (in MB)
MAX_PDF_SIZE=10

# Timeout for external API calls (in seconds)
API_TIMEOUT=30

# Logging Configuration
# ---------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Value Credit Tracking
# --------------------
# Enable detailed VC logging
VC_DEBUG=false

# Human Approval Configuration
# ----------------------------
# Default approval mode: auto, cli, or none
HUMAN_APPROVAL_MODE=cli

# Output Configuration
# --------------------
# Base output directory (relative to project root)
OUTPUT_DIR=output

# Save raw extracted text: true or false
SAVE_RAW_TEXT=true

# Meta Auditor Configuration
# --------------------------
# Default target language for code scanning
DEFAULT_LANGUAGE=python

# Maximum file size to scan (in KB)
MAX_FILE_SIZE=1024

# Exclude patterns (comma-separated)
EXCLUDE_PATTERNS=__pycache__,*.pyc,venv,node_modules,.git
